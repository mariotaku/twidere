<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="WindowTitle.Holo" parent="android:Widget.TextView">
		<item name="android:maxLines">1</item>
		<item name="android:scrollHorizontally">true</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	</style>

	<style name="WindowTitle.Holo.Inverse">
		<item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
	</style>

	<style name="DialogWindowTitle.Holo" parent="android:Widget.TextView">
		<item name="android:maxLines">1</item>
		<item name="android:scrollHorizontally">true</item>
		<item name="android:background">@drawable/actionbar_bg_dark_holo</item>
		<item name="android:textAppearance">@style/TextAppearance.Holo.DialogWindowTitle</item>
	</style>

	<style name="DialogWindowTitle.Holo.Light">
		<item name="android:textAppearance">@style/TextAppearance.Holo.Light.DialogWindowTitle</item>
	</style>

	<style name="TextAppearance.Holo.DialogWindowTitle" parent="android:TextAppearance.Large">
		<item name="android:textColor">@color/holo_blue_light</item>
	</style>

	<style name="TextAppearance.Holo.Light.DialogWindowTitle" parent="android:TextAppearance.Large">
		<item name="android:textColor">@color/holo_blue_light</item>
	</style>

	<style name="Widget.ActionBar" parent="android:Widget">
		<item name="android:background">?actionBarBackground</item>
	</style>

	<style name="Widget.ActionBar.Light">
		<item name="android:background">?actionBarBackground</item>
	</style>

	<style name="Widget.ActionBar.Light.Solid.Inverse" parent="android:Widget">
		<item name="android:background">?actionBarBackground</item>
	</style>

	<style name="Widget.ActionBarItem.Light">

		<!-- layout_width/height must be set in code -->
		<item name="android:background">@drawable/actionbar_item_background_holo_light</item>
	</style>

	<style name="Widget.ActionBarHomeItem.Light">

		<!-- layout_width/height must be set in code -->
		<item name="android:background">@drawable/actionbar_item_background_holo_light</item>
	</style>

	<style name="Widget.ActionBarTitleBase" parent="android:Widget.TextView">
		<item name="android:id">@id/actionbar_title</item>
		<!-- layout_width/height/weight must be set in code -->
		<item name="android:gravity">center_vertical</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:paddingLeft">6dp</item>
		<item name="android:paddingRight">6dp</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">marquee</item>
	</style>

	<style name="Widget.ActionBarTitle" parent="Widget.ActionBarTitleBase">
		<item name="android:textColor">?android:attr/textColorPrimary</item>
	</style>

	<style name="Widget.ActionBarTitle.Inverse" parent="Widget.ActionBarTitleBase">
		<item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
	</style>

	<style name="Widget.ActionBarItem" parent="android:Widget">

		<!-- layout_width/height must be set in code -->
		<item name="android:scaleType">center</item>
		<item name="android:layout_width">56dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:background">@drawable/actionbar_item_background_holo_dark</item>
	</style>

	<style name="Widget.ActionBarHomeItem" parent="android:Widget">
		<item name="android:minWidth">36dp</item>
		<item name="android:gravity">center_vertical|right</item>
		<item name="android:background">@drawable/actionbar_item_background_holo_dark</item>
		<item name="android:paddingRight">4dp</item>
	</style>

</resources>